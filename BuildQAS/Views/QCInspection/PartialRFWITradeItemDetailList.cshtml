@model List<BuildInspect.Models.ViewModel.QCInspectionRFWITradeItemDetailViewModel>

@{
    var ItemSno = 1;
}
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header"><a href="" onclick="AddItem()" data-toggle="modal" class="btn btn-primary waves-effect waves-light m-1"><i class="fa fa-plus"></i> Add Item</a></div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="ItemTable" class="table table-hover table-striped table-bordered">
                        <thead style="background-color: #F16876; color: white">
                            <tr>
                                <th>S.No</th>
                                <th>Item</th>
                                <th>Display Order</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @ItemSno
                                    </td>
                                    <td>@item.ItemName</td>
                                    <td>@item.OrderBy</td>
                                    <td>
                                        <button class="btn btn-success" onclick="EditItem(@item.TradeItemID)"><i class="fa fa-edit"></i></button>
                                        <button class="btn btn-danger" onclick="DeleteItem('@item.TradeItemID','@item.ItemName')"><i class="fa fa-trash"></i></button>
                                    </td>
                                </tr>
                                ItemSno++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>