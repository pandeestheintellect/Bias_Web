@model IEnumerable<BuildInspect.Models.ViewModel.QCInspectionProjectMasterViewModel>

@{
    Layout = null;
    var i = 1;
}

<!-- Breadcrumb-->
<div class="row pt-2 pb-2">
    <div class="col-sm-9">
        <h4 class="page-title">Project List</h4>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">Project Module</li>
            <li class="breadcrumb-item active" aria-current="page">RWFI Progress Status</li>
        </ol>
    </div>
</div>
<!-- End Breadcrumb-->

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table id="ProjectTable" class="table table-hover table-striped table-bordered">
                        <thead style="background-color: #F16876; color: white">
                            <tr>
                                <th>S.No</th>
                                <th>Project Name</th>
                                <th>Project Code</th>
                                <th>Start On</th>
                                <th>End On</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @i
                                    </td>
                                    <td>@item.Project_Name</td>
                                    <td>@item.Project_ID</td>
                                    <td>@string.Format("{0:dd-MMM-yyyy}", @item.StartOn)</td>
                                    <td>@string.Format("{0:dd-MMM-yyyy}", @item.EndOn)</td>
                                    <td>
                                        <button class="btn btn-primary" onclick="ViewRFWIProgressReport(@item.ProjectID)"><i class="fa fa-bar-chart-o" title="RFWI Progress Status"></i></button>
                                        <button class="btn btn-secondary" onclick="ViewProjectDocumentList(@item.ProjectID)"><i class="fa fa-file" title="Project Documents"></i></button>
                                        @if (@item.Is_Completed == 1)
                                        {
                                            <span class="badge-success">Completed</span>
                                        }
                                    </td>
                                </tr>
                                i++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Row-->

