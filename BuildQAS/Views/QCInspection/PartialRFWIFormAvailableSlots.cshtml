<div class="container">
    <div class="timings">
        <div style="height:30px"> <span> 8:00 </span> AM </div>
        <div style="height:30px;line-height: 30px;"> 8:30 </div>
        <div style="height:30px"> <span> 9:00 </span> AM </div>
        <div style="height:30px;line-height: 30px;"> 9:30 </div>
        <div style="height:30px"> <span> 10:00 </span>AM </div>
        <div style="height:30px;line-height: 30px;"> 10:30 </div>
        <div style="height:30px"> <span> 11:00 </span>AM </div>
        <div style="height:30px;line-height: 30px;"> 11:30 </div>
        <div style="height:30px"> <span> 12:00 </span>PM </div>
        <div style="height:30px;line-height: 30px;"> 12:30 </div>
        <div style="height:30px"> <span> 1:00 </span>PM </div>
        <div style="height:30px;line-height: 30px;"> 1:30 </div>
        <div style="height:30px"> <span> 2:00 </span>PM </div>
        <div style="height:30px;line-height: 30px;"> 2:30 </div>
        <div style="height:30px"> <span> 3:00 </span>PM </div>
        <div style="height:30px;line-height: 30px;"> 3:30 </div>
        <div style="height:30px"> <span> 4:00 </span>PM </div>
        <div style="height:30px;line-height: 30px;"> 4:30 </div>
        <div style="height:30px"> <span> 5:00 </span>PM </div>
        <div style="height:30px;line-height: 30px;"> 5:30 </div>
        <div style="height:30px"> <span> 6:00 </span>PM </div>
        <div style="height:30px;line-height: 30px;"> 6:30 </div>
        <div style="height:30px"> <span> 7:00 </span>PM </div>
        <div style="height:30px;line-height: 30px;"> 7:30 </div>
        <div> <span> 8:00 </span>PM </div>
    </div>
    <div class="days" id="events">
        @foreach (var item in Model)
        {
            if(item.InspectionStartOn.Value.Hours == 8)
            {
                top = 55;
            }
            else if(item.InspectionStartOn.Value.Hours == 9)
            {
                top = 115; // (60 + 55)
            }
            else if (item.InspectionStartOn.Value.Hours == 10)
            {
                top = 175; // (120 + 55)
            }
            else if (item.InspectionStartOn.Value.Hours == 11)
            {
                top = 235; // (180 + 55)
            }
            else if (item.InspectionStartOn.Value.Hours == 12)
            {
                top = 295; // (240 + 55)
            }
            else if (item.InspectionStartOn.Value.Hours == 13)
            {
                top = 355; // (300 + 55)
            }
            else if (item.InspectionStartOn.Value.Hours == 14)
            {
                top = 415; // (360 + 55)
            }
            else if (item.InspectionStartOn.Value.Hours == 15)
            {
                top = 475; // (420 + 55)
            }
            else if (item.InspectionStartOn.Value.Hours == 16)
            {
                top = 535; // (480 + 55)
            }
            else if (item.InspectionStartOn.Value.Hours == 17)
            {
                top = 595; // (540 + 55)
            }
            else if (item.InspectionStartOn.Value.Hours == 18)
            {
                top = 655; // (600 + 55)
            }
            else if (item.InspectionStartOn.Value.Hours == 19)
            {
                top = 715; // (660 + 55)
            }

            top = top + item.InspectionStartOn.Value.Minutes;
            if (item.InspectionStartOn.Value.Hours > 8)
            {
                top = top + 10;
            }
            <div class="event" style="width: 390px; height: @((@item.InspectionEndOn.Value.TotalMinutes - @item.InspectionStartOn.Value.TotalMinutes)+7)px; top: @(top)px; left: 90px;"><span class="title">@item.QCInspectionRFWINo</span></div>
        }
    </div>
</div>
