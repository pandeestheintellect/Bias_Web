    .container {
        height: 750px;
        width: 500px;
        display: inline-flex;
        font-family: 'Montserrat', sans-serif;
    }

    .timings {
        text-align: right;
        padding-right: 10px;
        width: 100px;
        height: 750px;
        display: flex;
        flex-direction: column;
        /*justify-content: space-between;*/
        background-color: white;
        font-size: 0.5em;
        box-sizing: border-box;
        color: #D1D1D1;
    }

    .timings span {
        font-size: 200%;
        color: #696969;
    }

    .days {
        height: 750px;
        width: 620px;
        padding: 0px 10px;
        background-color: #F0F0F0;
        border-color: #D1D1D1;
        border-style: solid;
        border-width: 1px;
        box-sizing: border-box;
    }

    .event {
        background-color: white;
        border-style: solid;
        border-width: 1px;
        border-left-width: 5px;
        border-color: #D1D1D1;
        border-left-color: #57b986;
        padding-left: 10px;
        padding-top: 5px;
        position: absolute;
        font-size: 0.5em;
        box-sizing: border-box;
    }

    .event .title {
        color: #57b986;
        font-size: 200%;
    }
    .event .location {
        font-size: 180%;
    }
